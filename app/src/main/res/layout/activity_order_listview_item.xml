<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="3dp"
    android:paddingLeft="8dp"
    android:paddingRight="10dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@id/layout_top"
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:background="@drawable/shop_icon_pop"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="3dp"/>

            <TextView
                android:id="@id/tv_shop_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="智慧王府井" />

            <ImageButton
                android:id="@id/imgb_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="@color/transparent"
                android:src="@drawable/order_list_delete_button"/>
        </LinearLayout>

        <View android:id="@id/line_temp"
            android:layout_below="@id/layout_top"
            style="@style/line6" />

        <LinearLayout
            android:id="@id/layout_middle"
            android:layout_below="@id/line_temp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@id/sdv_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@id/sdv_pic2"
                style="@style/order_item_sdv_style" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@id/sdv_pic3"
                style="@style/order_item_sdv_style" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@id/sdv_pic1"
                style="@style/order_item_sdv_style" />

            <TextView
                android:id="@id/tv_commodity_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="New Text"
                android:layout_marginLeft="10dp"
                android:maxLength="30"
                android:ellipsize="end"/>
        </LinearLayout>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@id/sdv_finsih"
            android:visibility="invisible"
            android:layout_width="75dp"
            android:layout_height="75dp"
            fresco:placeholderImage="@drawable/order_finish"
            fresco:placeholderImageScaleType="fitXY"
            android:layout_marginTop="25dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <View style="@style/line6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付款:￥" />

        <TextView
            android:id="@id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
