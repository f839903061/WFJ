<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="hy.zc.wfj.fragment.CommentPicFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <hy.zc.wfj.customview.MyListView
            android:id="@id/lv_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#10E4E4E4"
            android:dividerHeight="10dp" />

        <View style="@style/gap_grey_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="服务评价"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="11sp"
                android:text="满意请给5星哦" />
        </LinearLayout>

        <View style="@style/line6" />

        <LinearLayout style="@style/layout_style1">
            <TextView
                android:text="商品包装满意度"
                android:textSize="11sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RatingBar
                android:id="@id/ratingBar_package"
                android:layout_gravity="right"
                android:numStars="5"
                android:stepSize="1"
                android:isIndicator="false"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout style="@style/layout_style1">
            <TextView
                android:text="送货速度满意度"
                android:textSize="11sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RatingBar
                android:id="@id/ratingBar_speed"
                android:layout_gravity="right"
                android:numStars="5"
                android:stepSize="1"
                android:isIndicator="false"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout style="@style/layout_style1">
            <TextView
                android:text="配送人员的服务满意度"
                android:textSize="11sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RatingBar
                android:id="@id/ratingBar_sender"
                android:layout_gravity="right"
                android:numStars="5"
                android:stepSize="1"
                android:isIndicator="false"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            style="@style/gap_transparent_style"/>
        <Button
            android:id="@id/btn_commit"
            android:text="提交"
            android:background="@drawable/button_comment"
            android:layout_gravity="right"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="25dp" />
    </LinearLayout>


</ScrollView>
