<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/nav_background"
    android:paddingLeft="5dp"
    android:paddingRight="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@id/nav_home_btn"
            style="@style/nav_btn_style"
            android:src="@drawable/nav_home_btn_click" />

        <ImageButton
            android:id="@id/nav_category_btn"
            style="@style/nav_btn_style"
            android:src="@drawable/nav_category_btn_click" />

        <!--<ImageButton-->
            <!--android:id="@id/nav_faxian_btn"-->
            <!--style="@style/nav_btn_style"-->
            <!--android:src="@drawable/nav_faxian_btn_click" />-->

        <ImageButton
            android:id="@id/nav_cart_btn"
            style="@style/nav_btn_style"
            android:src="@drawable/nav_cart_btn_click" />

        <ImageButton
            android:id="@id/nav_personal_btn"
            style="@style/nav_btn_style"
            android:src="@drawable/nav_personal_btn_click" />

    </LinearLayout>


</RelativeLayout>
