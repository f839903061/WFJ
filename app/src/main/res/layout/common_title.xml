<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_navigation_bottom_height"
    android:background="@color/white">

    <ImageButton
        android:id="@id/common_title_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/common_title_back_click" />

    <TextView
        android:id="@id/common_title_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/common_title_back_btn"
        android:gravity="center"
        android:hint="@string/login_title_text"
        android:maxWidth="180.0dip"
        android:singleLine="true"
        android:textColor="#020202"
        android:textSize="@dimen/login_comfirm_button_text_size" />

    <ImageButton
        android:id="@id/img_tmp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:src="@drawable/common_title_back_click"
        android:visibility="invisible"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />
</RelativeLayout>